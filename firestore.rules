
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and status
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isAdmin() {
      return isAuth() && getUserData(request.auth.uid).role == 'admin';
    }

    function isChef() {
      return isAuth() && getUserData(request.auth.uid).role == 'chef';
    }
    
    function isApprovedChef() {
      let userData = getUserData(request.auth.uid);
      return isAuth() 
        && userData.role == 'chef' 
        && userData.vettingStatus == 'approved';
    }
    
    function isCustomer() {
      return isAuth() && getUserData(request.auth.uid).role == 'customer';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own user document on signup
      allow create: if isAuth() && isOwner(userId);
      // Users can read their own data, Admins can read any user's data
      allow read: if isAuth() && (isOwner(userId) || isAdmin());
      // Users can update their own profile, Admins can update any
      allow update: if isAuth() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();

      // Rules for the 'cart' subcollection
      match /cart/{cartItemId} {
        allow list, read, write: if isOwner(userId);
      }
    }

    // Rules for the 'chefs' collection
    match /chefs/{chefId} {
      allow read: if true;
      allow create: if isApprovedChef() || isAdmin();
      allow update: if (isApprovedChef() && resource.data.ownerUserId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for 'dishes' and 'prices' collections
    match /dishes/{dishId} {
      allow read: if true;
      allow create: if isApprovedChef() || isAdmin();
      // Only the approved chef who created the dish or an admin can update/delete it
      allow update, delete: if (isApprovedChef() && request.auth.uid == resource.data.chefId) || isAdmin();
    }

    match /prices/{priceId} {
      allow read: if true;
      allow create, update, delete: if isApprovedChef() || isAdmin();
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      function getOrderChefId() {
        return get(/databases/$(database)/documents/orders/$(orderId)).data.chefId;
      }
      allow read: if isOwner(resource.data.customerId) || (isChef() && getOrderChefId() == request.auth.uid) || isAdmin();
      allow create: if isCustomer();
      // Allow customer to cancel, chef to update status, and admin to do anything.
      allow update: if (isApprovedChef() && getOrderChefId() == request.auth.uid) || (isCustomer() && request.resource.data.status == 'cancelled') || isAdmin();
    }

    // Rules for the 'wallets' collection
    match /wallets/{chefId} {
      allow read: if (isApprovedChef() && isOwner(chefId)) || isAdmin();
      // Allow chef to create/update their own payout details, but not balance/pending
      allow write: if (isApprovedChef() && isOwner(chefId))
                    && request.resource.data.keys().hasOnly(['payoutDetails', 'payoutDetailsLastUpdated']);
    }

    match /transactions/{txnId} {
      allow read: if isAdmin();
      allow write: if false; // Managed by Cloud Functions
    }
  }
}
