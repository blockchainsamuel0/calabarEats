rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isChef() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'chef';
    }
    
    function isCustomer() {
        return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      // Rules for the 'cart' subcollection
      match /cart/{cartItemId} {
        allow read, write, list: if isOwner(userId);
      }
    }

    // Rules for the 'chefs' collection
    match /chefs/{chefId} {
      allow read: if true;
      allow create: if isChef() || isAdmin();
      allow update: if (isChef() && resource.data.ownerUserId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for 'dishes' and 'prices' collections
    match /dishes/{dishId} {
      allow read: if true;
      allow create, update, delete: if isChef() || isAdmin();
    }

    match /prices/{priceId} {
      allow read: if true;
      allow create, update, delete: if isChef() || isAdmin();
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.customerId) || isOwner(get(/databases/$(database)/documents/chefs/$(resource.data.chefId)).data.ownerUserId) || isAdmin();
      allow create: if isCustomer();
      allow update: if (isChef() && !('payment' in request.resource.data)) || (isCustomer() && request.resource.data.status == 'cancelled') || isAdmin();
    }

    // Wallets and Transactions are admin/system managed
    match /wallets/{chefId} {
      allow read: if (isChef() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.chefProfileId == chefId) || isAdmin();
      allow write: if false; // Managed by Cloud Functions
    }

    match /transactions/{txnId} {
      allow read: if isAdmin();
      allow write: if false; // Managed by Cloud Functions
    }
  }
}
